---
const { href, ...props } = Astro.props;
const path = Astro.url.pathname.replace(/\/$/, '');

type navs = '/posts' | '/toys';
const isPosts = path.startsWith('/posts');
const isToys = !isPosts; // which also treats the '/' (root) page as '/toys'
const isMatched: boolean = {
  '/posts': isPosts,
  '/toys': isToys,
}[href as navs];
---

<a
  href={href}
  class:list={[
    'decoration-yellow-300 decoration-2 underline-offset-8 active:text-slate-800 active:underline active:decoration-yellow-200',
    { underline: isMatched, 'text-slate-500': !isMatched },
  ]}
  {...props}><slot /></a
>
